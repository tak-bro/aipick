    "printWidth": 140,
    "tabWidth": 4,
    "trailingComma": "es5",
    "singleQuote": true,
    "useTabs": false,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
